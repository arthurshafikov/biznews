{% extends 'base.html.twig' %}

{% block title %}{{ user.name }}'s Profile{% endblock %}

{% block body %}
    <div class="container-fluid mt-5 pt-3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title mb-0">
                        <h4 class="m-0 text-uppercase font-weight-bold">Profile</h4>
                    </div>
                    <div class="bg-white border border-top-0 p-4 mb-3 d-flex flex-wrap">
                        <div class="avatar mr-3 mb-3">
                            <img src="{{ user.avatarPath }}" alt="">
                        </div>
                        <div class="userInfo fs-4">
                            <b>Username:</b> <p>{{ user.name }}</p>
                            <b>Email:</b> <p>{{ user.email }}</p>
                        </div>
                    </div>
                    <div class="section-title mb-0">
                        <h4 class="m-0 text-uppercase font-weight-bold">Change Information</h4>
                    </div>
                    <div class="bg-white border border-top-0 p-4 mb-3">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
